@model PortfolioMyriam.Models.PortfolioItemViewModel

@{
    ViewData["Title"] = "Create Portfolio Item";
}

<div class="container-centered portfolio-item spacer-top spacer-bottom">

    <h2>Create Portfolio Item</h2>

    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @await Html.PartialAsync("EditCreatePartial")
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>


    @await Html.PartialAsync("BackToListPartial")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
