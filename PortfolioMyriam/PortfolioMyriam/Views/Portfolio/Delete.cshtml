@model PortfolioMyriam.Models.PortfolioItemViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container-centered portfolio-item portfolio-item-centered spacer-top spacer-bottom">

    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    @await Html.PartialAsync("DetailsPartial")

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default spacer-top-half" />
        @await Html.PartialAsync("BackToListPartial")
    </form>
</div>